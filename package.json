{
  "name": "docusaurus-plugin-cookie-consent",
  "version": "4.0.0",
  "description": "A cookie consent modal/toast component for Docusaurus sites with configurable text, links, and preference management.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "watch": "npm run dev",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run --pool=threads --maxWorkers=1 --no-file-parallelism",
    "test:watch": "vitest --pool=threads --maxWorkers=1 --no-file-parallelism",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@docusaurus/core": "^3.0.0",
    "@docusaurus/types": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@docusaurus/core": "^3.0.0",
    "@docusaurus/types": "^3.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.8.7",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "jsdom": "^27.1.0",
    "patch-package": "^8.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.0.1",
    "typescript": "^5.6.3",
    "vitest": "^4.0.8"
  },
  "keywords": [
    "docusaurus",
    "plugin",
    "cookies",
    "cookie-consent",
    "gdpr",
    "privacy",
    "typescript"
  ]
}
